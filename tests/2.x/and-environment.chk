// check that forked runners can read environment
{
  var x = 0;
  { x.print() } & { x.print() };
  x.print();
};
[00000001] 0
[00000002] 0
[00000003] 0

// check that forked runners can write environment
{
  var x = 0;
  var y = 0;
  { x = 42 } & { y = 51 };
  x.print();
  y.print();
};
[00000004] 42
[00000005] 51
