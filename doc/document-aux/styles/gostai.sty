%% \indexSlot{ Object }{ Slot }
%% ----------------------------
%% Insert Object.Slot in the index.  Expand Object first.
\newcommand{\indexSlot}[2]
{%
  \edef\@tempInda{#1}%
  \ifthenelse{\equal{#2}{!}}{\def\@tempIndb{"!}}{%
  \ifthenelse{\equal{#2}{'!'}}{\def\@tempIndb{'"!'}}{%
  \ifthenelse{\equal{#2}{!=}}{\def\@tempIndb{"!=}}{%
  \ifthenelse{\equal{#2}{'!='}}{\def\@tempIndb{'"!='}}{%
  \ifthenelse{\equal{#2}{!==}}{\def\@tempIndb{"!==}}{%
  \ifthenelse{\equal{#2}{'!=='}}{\def\@tempIndb{'"!=='}}{%
    \def\@tempIndb{#2}}}}}}}%
  \@expandtwoargs \@indexSlot \@tempInda \@tempIndb
}

