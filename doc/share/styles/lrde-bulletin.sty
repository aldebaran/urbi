\renewcommand{\maketitle}{
  \begin{multicols}{2}[\chapter{\lrdebulletin@title}\refstepcounter{chapter}][3cm]%
    \ifx\empty\lrdebulletin@subtitle\else\noindent\textbf{\LARGE \lrdebulletin@subtitle}%
