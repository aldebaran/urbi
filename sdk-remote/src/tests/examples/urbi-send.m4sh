## Test 3.  ##
## -------- ##

cat >shutdown.u <<EOF
"LAST";
shutdown;
EOF

urbi_send client3 \
          -e 'var x = 0;at (x>5) echo("coucou"); x = 7;' \
          -f shutdown.u
children_wait 10 client3

xrun "check" grep "coucou" client3.out
xrun "check" grep '"LAST"' client3.out

